{
    "name": "rubles"
  , "version": "0.1.2"
  , "description": "Стоимость прописью"
  , "keywords": ["ruble", "numeral"]
  , "author": "Alexey Simonenko <alexey@simonenko.su>"
  , "homepage": "http://simonenko.su/projects/rubles"
  , "main": "./lib/rubles"
  , "repository": {
        "type": "git"
      , "url": "https://github.com/meritt/rubles.git"
    }
  , "engines": {
      "node": ">=0.8.0 <0.11.0"
    }
  , "devDependencies": {
        "coffee-script": "1.6.x"
      , "jshint": "2.0.x"
      , "mocha": "1.9.x"
      , "should": "1.2.x"
      , "coveralls": "2.0.x"
      , "istanbul": "0.1.x"
      , "mocha-istanbul": "0.2.x"
      , "uglify-js": "2.3.x"
    }
  , "scripts": {
        "build": "./node_modules/.bin/coffee -c -o lib/ src/ && ./node_modules/.bin/uglifyjs lib/rubles.js -o lib/rubles.min.js -m -c"
      , "lint": "npm run-script build && ./node_modules/.bin/jshint lib/rubles.js"

      , "lib-cov": "./node_modules/.bin/istanbul instrument --output lib-cov --no-compact --variable global.__coverage__ lib"
      , "coveralls": "npm run-script lib-cov && COVERAGE=1 ISTANBUL_REPORTERS=lcovonly ./node_modules/.bin/mocha --reporter mocha-istanbul && cat lcov.info | ./node_modules/.bin/coveralls && rm -rf lib-cov lcov.info"

      , "test": "npm run-script build && ./node_modules/.bin/mocha test && npm run-script coveralls"
  }
}